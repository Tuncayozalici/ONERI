@model ONERI.Models.VeriYukleViewModel

@{
    ViewData["Title"] = "Veri Yükle";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/admin-veri-yukle.css" asp-append-version="true" />
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h1 class="display-6 fw-bold mb-1">Veri Yükle</h1>
            <p class="text-muted mb-0">Excel dosyalarını yükleyip güncelleyin. Sistem dosyaları wwwroot/EXCELS içine kaydeder.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Yönetim Paneline Dön
        </a>
    </div>

    <div class="card shadow-sm mb-4 veri-yukle-card">
        <div class="card-body">
            <form asp-action="VeriYukle" method="post" enctype="multipart/form-data" class="row g-4">
                @Html.AntiForgeryToken()

                <div class="col-12">
                    <label class="form-label fw-semibold">Excel Dosyaları</label>
                    <input class="form-control" type="file" name="Dosyalar" accept=".xls,.xlsx,.xlsm" multiple />
                    <small class="text-muted">Aynı anda birden fazla dosya seçebilirsiniz. Dosya isimleri sabit olmalıdır.</small>
                </div>

                <div class="col-12">
                    <div class="alert alert-info mb-0">
                        <strong>Beklenen dosya adları:</strong>
                        <ul class="mb-0">
                            <li>MARWOOD Profil Lazer Veri Ekranı.xlsm</li>
                            <li>YENİ BOYA GÜNLÜK VERİ TAKİP 2026 YILI.xlsm</li>
                            <li>BOYA HATALI  PARÇA GİRİŞİ.xlsm</li>
                            <li>PVC BÖLÜMÜ VERİ EKRANI 2026.xlsm</li>
                            <li>METAL HATALI  PARÇA GİRİŞİ.xlsm</li>
                            <li>MARWOOD Masterwood Veri Ekranı 2026.xlsm</li>
                            <li>MARWOOD Skipper Veri Ekranı 2026.xlsm</li>
                            <li>MARWOOD Tezgah Bölümü Veri Ekranı.xlsm</li>
                            <li>EBATLAMA BÖLÜMÜ VERİ EKRANI 2026.xlsm</li>
                            <li>HATALI PARÇA VERİ GİRİŞİ.xlsm</li>
                        </ul>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark px-4">
                        <i class="bi bi-upload me-1"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Results != null && Model.Results.Any())
    {
        <div class="card shadow-sm veri-yukle-card">
            <div class="card-header bg-light">
                Yükleme Özeti
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Dosya</th>
                                <th>Sayfa</th>
                                <th>Satır Sayısı</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var result in Model.Results)
                        {
                            <tr>
                                <td>@result.DosyaAdi</td>
                                <td>@result.SayfaAdi</td>
                                <td>@(result.SatirSayisi.HasValue ? result.SatirSayisi.Value.ToString() : "-")</td>
                                <td>@result.Mesaj</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
