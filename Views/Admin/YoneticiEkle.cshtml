@model ONERI.Models.BolumYonetici

@{
    ViewData["Title"] = "Yeni Yönetici Ekle";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/admin-yonetici-ekle.css" asp-append-version="true" />
}

<div class="container mt-4">
    
    <!-- Page Header -->
    <div class="page-header mb-5">
        <h1 class="fw-bold">Yeni Yönetici Ekle</h1>
        <p class="text-muted">Yeni bir bölüm sorumlusu ve iletişim bilgilerini sisteme ekleyin.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 p-md-5 yonetici-ekle-card">
                <form asp-action="YoneticiEkle" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="BolumAdi" class="form-label fw-semibold"></label>
                        <input asp-for="BolumAdi" class="form-control" />
                        <span asp-validation-for="BolumAdi" class="text-danger"></span>
                    </div>
    
                    <div class="mb-3">
                        <label asp-for="YoneticiAdi" class="form-label fw-semibold"></label>
                        <input asp-for="YoneticiAdi" class="form-control" />
                        <span asp-validation-for="YoneticiAdi" class="text-danger"></span>
                    </div>
    
                    <div class="mb-3">
                        <label asp-for="YoneticiEmail" class="form-label fw-semibold"></label>
                        <input asp-for="YoneticiEmail" class="form-control" />
                        <span asp-validation-for="YoneticiEmail" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="text-end">
                        <a asp-action="BolumYoneticileri" class="btn btn-outline-secondary me-2">Listeye Dön</a>
                        <button type="submit" class="btn btn-dark px-4">
                            <i class="bi bi-plus-lg me-1"></i> Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
