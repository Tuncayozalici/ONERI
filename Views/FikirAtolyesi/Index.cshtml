@model IEnumerable<ONERI.Models.Oneri>
@{
    ViewData["Title"] = "Fikir Atölyesi";

    // Helper functions are no longer needed for this view as the table is removed.
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/fikir-atolyesi-index.css" asp-append-version="true" />
}

<div class="container mt-4">

    <!-- 1. Blok: Karşılama Alanı (Header) -->
    <div class="marwood-header mb-5">
        <h1>Marwood <span>Fikir Atölyesi</span></h1>
        <p class="text-muted">Let's design for a better office mood, together.</p>
    </div>

    <!-- 2. Blok: İstatistik Kartları -->
    <div class="row mb-5">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card p-3 h-100">
                <div class="d-flex align-items-center gap-3">
                    <div class="stat-card-icon">
                        <i class="bi bi-lightbulb"></i>
                    </div>
                    <div>
                        <div class="stat-badge"><i class="bi bi-graph-up"></i> Son 30 gün</div>
                        <h5 class="card-title text-muted mb-0">Toplam</h5>
                        <p class="fs-2 fw-bold mb-0">@ViewBag.ToplamSayi</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-pending p-3 h-100">
                <div class="d-flex align-items-center gap-3">
                     <div class="stat-card-icon">
                         <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div>
                        <div class="stat-badge warn"><i class="bi bi-hourglass"></i> Bekleyen</div>
                        <h5 class="card-title text-muted mb-0">Beklemede</h5>
                        <p class="fs-2 fw-bold mb-0">@ViewBag.Bekleyen</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-approved p-3 h-100">
                <div class="d-flex align-items-center gap-3">
                     <div class="stat-card-icon">
                        <i class="bi bi-check-lg"></i>
                    </div>
                    <div>
                        <div class="stat-badge ok"><i class="bi bi-check2-circle"></i> Tamamlanan</div>
                        <h5 class="card-title text-muted mb-0">Onaylanan</h5>
                        <p class="fs-2 fw-bold mb-0">@ViewBag.Onaylanan</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card stat-card stat-card-rejected p-3 h-100">
                <div class="d-flex align-items-center gap-3">
                     <div class="stat-card-icon">
                         <i class="bi bi-x-lg"></i>
                    </div>
                    <div>
                        <div class="stat-badge bad"><i class="bi bi-x-circle"></i> Kapanan</div>
                        <h5 class="card-title text-muted mb-0">Reddedilen</h5>
                        <p class="fs-2 fw-bold mb-0">@ViewBag.Red</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. Blok: Yeni Aksiyon Butonları -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <a href="@Url.Action("Yeni", "Oneri")" class="action-card action-card-light">
                <div class="icon-wrapper bg-light text-dark">
                    <i class="bi bi-lightbulb"></i>
                </div>
                <h3>Yeni Fikir Paylaş</h3>
                <p>Aklındaki projeyi yönetime ilet.</p>
                <span class="cta">Hemen Başla</span>
            </a>
        </div>
        <div class="col-md-6 mb-4">
            <a href="@Url.Action("Sorgula", "Oneri")" class="action-card action-card-light">
                <div class="icon-wrapper bg-light text-dark">
                    <i class="bi bi-search"></i>
                </div>
                <h3>Durum Sorgula</h3>
                <p>Takip numaranla sürecini izle.</p>
                <span class="cta">Takip Et</span>
            </a>
        </div>
    </div>

</div>
