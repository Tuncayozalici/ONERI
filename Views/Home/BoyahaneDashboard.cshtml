@model ONERI.Models.BoyaDashboardViewModel
@{
    ViewData["Title"] = "Boyahane Verileri";
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
}

<div class="container">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">Boyahane Üretim Raporu</h2>
        </div>
        <div class="col-md-6">
            <form asp-action="BoyahaneDashboard" method="get" class="d-flex justify-content-md-end align-items-center gap-2">
                <div class="form-group">
                    <label for="raporTarihi" class="visually-hidden">Tarih Seç</label>
                    <input type="date" id="raporTarihi" name="raporTarihi" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="ay" class="visually-hidden">Ay Seç</label>
                    <select id="ay" name="ay" class="form-select">
                        <option value="">Ay Seçin</option>
                        <option value="1">Ocak</option>
                        <option value="2">Şubat</option>
                        <option value="3">Mart</option>
                        <option value="4">Nisan</option>
                        <option value="5">Mayıs</option>
                        <option value="6">Haziran</option>
                        <option value="7">Temmuz</option>
                        <option value="8">Ağustos</option>
                        <option value="9">Eylül</option>
                        <option value="10">Ekim</option>
                        <option value="11">Kasım</option>
                        <option value="12">Aralık</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="yil" class="visually-hidden">Yıl Seç</label>
                    <input type="number" id="yil" name="yil" class="form-control" placeholder="Yıl" value="@DateTime.Now.Year" />
                </div>
                <button type="submit" class="btn btn-success">Filtrele</button>
                <button type="button" id="clearFilter" class="btn btn-secondary">Temizle</button>
            </form>
        </div>
    </div>

    <!-- KPI Kartları -->
    <div class="row g-4 mb-5">
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Günlük Toplam Boyama</h5>
                    <p class="card-text">@Model.GunlukToplamBoyama.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Panel Toplam Boyama</h5>
                    <p class="card-text">@Model.PanelToplamBoyama.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Döşeme Toplam Boyama</h5>
                    <p class="card-text">@Model.DosemeToplamBoyama.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-x-circle me-2"></i>Günlük Hata Sayısı</h5>
                    <p class="card-text">@Model.GunlukHataSayisi.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-12">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-trash me-2"></i>Fire/Hata Oranı</h5>
                    <p class="card-text">@Model.FireOrani.ToString("F2") %</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafikler -->
    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.UretimDagilimiTitle ?? "Üretim Dağılımı (Panel vs Döşeme)")
                </div>
                <div class="card-body">
                    <canvas id="uretimDagilimGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Hata Nedenleri Analizi
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="hataGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.KaliteTrendTitle ?? "Kalite Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="kaliteTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.UretimTrendTitle ?? "Üretim Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="uretimTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="boyahane-dashboard-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = (int?)null }))
    </script>
    <script src="~/js/pages/dashboards/boyahane-dashboard.js" asp-append-version="true"></script>
}
