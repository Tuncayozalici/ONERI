@model ONERI.Models.EbatlamaDashboardViewModel
@{
    ViewData["Title"] = "Ebatlama Verileri";

    var queryStartDate = Context.Request.Query["startDate"].ToString();
    var queryEndDate = Context.Request.Query["endDate"].ToString();
    var queryRaporTarihi = Context.Request.Query["raporTarihi"].ToString();
    var queryBaslangicTarihi = Context.Request.Query["baslangicTarihi"].ToString();
    var queryBitisTarihi = Context.Request.Query["bitisTarihi"].ToString();

    var routeStartDate = !string.IsNullOrWhiteSpace(queryStartDate)
        ? queryStartDate
        : (!string.IsNullOrWhiteSpace(queryBaslangicTarihi) ? queryBaslangicTarihi : queryRaporTarihi);
    var routeEndDate = !string.IsNullOrWhiteSpace(queryEndDate)
        ? queryEndDate
        : (!string.IsNullOrWhiteSpace(queryBitisTarihi) ? queryBitisTarihi : queryRaporTarihi);

    var baseRouteValues = new
    {
        startDate = string.IsNullOrWhiteSpace(routeStartDate) ? null : routeStartDate,
        endDate = string.IsNullOrWhiteSpace(routeEndDate) ? null : routeEndDate
    };

    var tumMakinelerUrl = Url.Action("EbatlamaDashboard", "Home", baseRouteValues);
    var selectedMachine = (Model.SeciliMakine ?? string.Empty).Trim();
    var hideMakineKesimGrafigi = selectedMachine.Equals("SELCO", StringComparison.OrdinalIgnoreCase)
                                 || selectedMachine.Equals("MACMAZZA", StringComparison.OrdinalIgnoreCase);
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
    <link rel="stylesheet" href="~/css/pages/home-gunluk-veriler.css" asp-append-version="true" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="daily-page">
<div class="container">
    <div class="daily-hero">
        <div class="hero-kicker"><i class="bi bi-tools"></i> Ebatlama Bölümü</div>
        <h2>
            Ebatlama Üretim Panosu
            @if (!string.IsNullOrWhiteSpace(Model.SeciliMakine))
            {
                <span class="fs-4 text-primary">- @Model.SeciliMakine</span>
            }
        </h2>
        <p class="text-muted mb-0">Ebatlama makinelerinin kesim, plaka, duraklama ve OEE performansını tek ekranda izleyin.</p>
        @if (!string.IsNullOrWhiteSpace(Model.SeciliMakine))
        {
            <a class="btn btn-sm btn-outline-primary mt-2" href="@tumMakinelerUrl">
                <i class="bi bi-arrow-left"></i> Tüm Makineleri Göster
            </a>
        }
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <small class="text-muted">Seçili Aralık: @ViewBag.EbatlamaRange</small>
        </div>
        <div class="col-md-6">
            <form asp-action="EbatlamaDashboard" method="get" class="d-flex justify-content-md-end align-items-center gap-2 js-unified-date-filter-form">
                @await Html.PartialAsync("_UnifiedDateFilter")
                @if (!string.IsNullOrWhiteSpace(Model.SeciliMakine))
                {
                    <input type="hidden" name="makine" value="@Model.SeciliMakine" />
                }
                <button type="submit" class="btn btn-success js-unified-filter-apply" disabled>Filtrele</button>
                <button type="button" class="btn btn-secondary js-unified-filter-clear" disabled>Temizle</button>
            </form>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-12 text-center">
            @await Html.PartialAsync("_SelectedFilterPeriod", Model.RaporTarihi)
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-2 col-md-4">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-scissors me-2"></i>Toplam Kesim Adeti</h5>
                    <p class="card-text">@Model.ToplamKesimAdet.ToString("N1")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-stack me-2"></i>8mm Plaka</h5>
                    <p class="card-text">@Model.ToplamPlaka8Mm.ToString("N1")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-stack me-2"></i>18mm Plaka</h5>
                    <p class="card-text">@Model.ToplamPlaka18Mm.ToString("N1")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-stack me-2"></i>30mm Plaka</h5>
                    <p class="card-text">@Model.ToplamPlaka30Mm.ToString("N1")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-bounding-box-circles me-2"></i>Toplam Gönyelleme</h5>
                    <p class="card-text">@Model.ToplamGonyelleme.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-stopwatch me-2"></i>Toplam Duraklama (dk)</h5>
                    <p class="card-text">@Model.ToplamDuraklamaDakika.ToString("N0")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-activity me-2"></i>Performans</h5>
                    <p class="card-text">@Model.OrtalamaPerformans.ToString("N2")%</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-speedometer2 me-2"></i>Kullanılabilirlik</h5>
                    <p class="card-text">@Model.OrtalamaKullanilabilirlik.ToString("N2")%</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-shield-check me-2"></i>Kalite</h5>
                    <p class="card-text">@Model.OrtalamaKalite.ToString("N2")%</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-graph-up-arrow me-2"></i>OEE</h5>
                    <p class="card-text">@Model.OrtalamaOee.ToString("N2")%</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.EbatlamaOeeTitle ?? "OEE Skoru Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="oeeTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.EbatlamaTrendTitle ?? "Üretim Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="kesimTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.EbatlamaPlakaTrendTitle ?? "Plaka Trendleri (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="plakaTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Kesim Adeti Trendi (8mm / 30mm)
                </div>
                <div class="card-body">
                    <canvas id="kesimAdetTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        @if (!hideMakineKesimGrafigi)
        {
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header">
                        Makine Bazlı Kesim Adeti
                    </div>
                    <div class="card-body">
                        <canvas id="makineKesimGrafigi"></canvas>
                    </div>
                </div>
            </div>
        }
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Duraklama Nedenleri
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="duraklamaNedenGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.MakineKartlari.Count > 1)
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 mt-2">
            @foreach (var kart in Model.MakineKartlari)
            {
                var makineUrl = Url.Action("EbatlamaDashboard", "Home", new
                {
                    startDate = string.IsNullOrWhiteSpace(routeStartDate) ? null : routeStartDate,
                    endDate = string.IsNullOrWhiteSpace(routeEndDate) ? null : routeEndDate,
                    makine = kart.MakineAdi
                });
                <div class="col">
                    <a href="@makineUrl" class="nav-tile">
                        <div class="status-dot active"></div>
                        <div class="text-center">
                            <div class="icon">
                                <i class="bi bi-cpu"></i>
                            </div>
                            <h5>@kart.MakineAdi Makinesi</h5>
                            <p>Kesim: @kart.Uretim.ToString("N0") | Duraklama: @kart.DuraklamaDakika.ToString("N0") dk | OEE: @kart.Oee.ToString("N2")%</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="ebatlama-dashboard-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = ViewBag.EbatlamaResolvedYear }))
    </script>
    <script src="~/js/pages/dashboards/ebatlama-dashboard.js" asp-append-version="true"></script>
}
