@model ONERI.Models.GenelFabrikaOzetViewModel
@{
    ViewData["Title"] = "Günlük Veriler Panosu";
    var toplamDuraklamaDakika = (int)Math.Round(Model.ToplamDuraklamaDakika, MidpointRounding.AwayFromZero);
    var toplamDuraklamaSaat = toplamDuraklamaDakika / 60;
    var kalanDuraklamaDakika = toplamDuraklamaDakika % 60;
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/home-gunluk-veriler.css" asp-append-version="true" />
}

<div class="daily-page">
<div class="container">
    <div class="daily-hero">
        <div class="hero-kicker"><i class="bi bi-activity"></i> Günlük Veriler</div>
        <h2>Fabrika Veri Panosu</h2>
        <p class="text-muted mb-0">Tüm bölümlerden gelen günlük üretim ve performans verilerini tek ekranda izleyin.</p>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <div class="summary-card" id="summaryCard">
                <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <span>Genel Fabrika Özeti</span>
                    <div class="d-flex align-items-center gap-3 flex-wrap">
                        <small class="text-muted">Seçili Aralık: @ViewBag.OzetRange</small>
                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" id="summaryUltraToggle">
                            <label class="form-check-label" for="summaryUltraToggle">Ultrawide</label>
                        </div>
                        <form asp-action="GunlukVeriler" method="get" id="summaryFilterForm" class="d-flex align-items-center gap-2 js-unified-date-filter-form">
                            @await Html.PartialAsync("_UnifiedDateFilter")
                            <button type="submit" class="btn btn-sm btn-primary js-unified-filter-apply" disabled>Filtrele</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary js-unified-filter-clear" disabled>Temizle</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @await Html.PartialAsync("_SelectedFilterPeriod", Model.RaporTarihi)
                    </div>
                    <div class="summary-top-hub mb-4">
                        <div class="summary-side-stack summary-side-stack-left">
                            <div class="kpi-card h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-graph-up me-2"></i>Toplam Üretilen Parça</h6>
                                    <p class="card-text">@Model.ToplamUretim.ToString("N0")</p>
                                </div>
                            </div>
                            <div class="kpi-card h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-x-circle me-2"></i>Hatalı Adet</h6>
                                    <p class="card-text">@Model.ToplamHataAdet.ToString("N0")</p>
                                </div>
                            </div>
                            <div class="kpi-card h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-stopwatch me-2"></i>Makine Bazlı Toplam Duraklama</h6>
                                    <p class="card-text">@toplamDuraklamaSaat.ToString("N0") sa @kalanDuraklamaDakika.ToString("D2") dk</p>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow-sm h-100 oee-gauge-card summary-hub-chart">
                            <div class="card-header">Genel OEE Skoru</div>
                            <div class="card-body">
                                <canvas id="genelOeeGaugeGrafigi"></canvas>
                            </div>
                        </div>

                        <div class="card shadow-sm h-100 oee-machine-card summary-hub-chart">
                            <div class="card-header">Makine Bazlı OEE (Genel Ortalama)</div>
                            <div class="card-body">
                                <canvas id="makineOeeGrafigi"></canvas>
                            </div>
                        </div>

                        <div class="summary-side-stack summary-side-stack-right">
                            <div class="kpi-card kpi-card-info h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-exclamation-triangle me-2"></i>En Çok Hata Nedeni</h6>
                                    <p class="card-text">@Model.EnCokHataNedeni</p>
                                </div>
                            </div>
                            <div class="kpi-card kpi-card-info h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-diagram-3 me-2"></i>En Çok Hata Bölümü</h6>
                                    <p class="card-text">@Model.EnCokHataBolum</p>
                                </div>
                            </div>
                            <div class="kpi-card kpi-card-info h-100">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="bi bi-person-badge me-2"></i>En Çok Hata Operatörü</h6>
                                    <p class="card-text">@Model.EnCokHataOperator</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="summary-charts">
                        <div class="card shadow-sm h-100 oee-components-card">
                            <div class="card-header">OEE Bileşenleri (Genel Ortalama)</div>
                            <div class="card-body">
                                <canvas id="genelBilesenGrafigi"></canvas>
                            </div>
                        </div>
                        <div class="card shadow-sm h-100 oee-dept-card">
                            <div class="card-header">Bölüm Bazlı OEE (Genel Ortalama)</div>
                            <div class="card-body">
                                <canvas id="bolumOeeGrafigi"></canvas>
                            </div>
                        </div>
                        <div class="card shadow-sm h-100 bolum-hata-card">
                            <div class="card-header">Bölüm Bazlı Hata (Toplam Adet)</div>
                            <div class="card-body">
                                <canvas id="bolumHataGrafigi"></canvas>
                            </div>
                        </div>
                        <div class="card shadow-sm h-100">
                            <div class="card-header">Hata Nedenleri (Top 6)</div>
                            <div class="card-body">
                                <div class="chart-pie-wrap">
                                    <canvas id="hataNedenGenelGrafigi" class="chart-pie"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="card shadow-sm h-100 trend-line-card">
                            <div class="card-header">Duraklama Trendi</div>
                            <div class="card-body">
                                <canvas id="duraklamaTrendGrafigi" class="chart-fill"></canvas>
                            </div>
                        </div>
                        <div class="card shadow-sm h-100 trend-line-card">
                            <div class="card-header">Hata Trendi</div>
                            <div class="card-body">
                                <canvas id="genelHataTrend" class="chart-fill"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bölüm Navigasyon Kartları -->
    <div id="sectionNavGrid" class="section-nav-grid row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mb-4">
        <div class="col">
            <a href="@Url.Action("ProfilLazerVerileri", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-speedometer2"></i>
                    </div>
                    <h5>Profil Lazer Bölümü</h5>
                    <p>Günlük üretim, verimlilik ve trend analizleri.</p>
                </div>
            </a>
        </div>

        <div class="col">
            <a href="@Url.Action("BoyahaneDashboard", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-paint-bucket"></i>
                    </div>
                    <h5>Boyahane Bölümü</h5>
                    <p>Günlük boyama, fire ve hata analizleri.</p>
                </div>
            </a>
        </div>

        <div class="col">
            <a href="@Url.Action("PvcDashboard", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-bounding-box"></i>
                    </div>
                    <h5>PVC Bölümü</h5>
                    <p>Üretim metrajı, duraklama ve verimlilik analizleri.</p>
                </div>
            </a>
        </div>

        <div class="col">
            <a href="@Url.Action("TezgahDashboard", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-gear"></i>
                    </div>
                    <h5>Tezgah Bölümü</h5>
                    <p>Parça, kişi, kayıp süre ve kullanılabilirlik.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="@Url.Action("EbatlamaDashboard", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-tools"></i>
                    </div>
                    <h5>Ebatlama Bölümü</h5>
                    <p>Kesim, plaka, duraklama ve mesai analizleri.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="@Url.Action("CncDashboard", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-cpu"></i>
                    </div>
                    <h5>CNC Bölümü</h5>
                    <p>Masterwood, Skipper ve Rover-B makineleri.</p>
                </div>
            </a>
        </div>

        <div class="col">
            <a href="@Url.Action("HataliParcaDashboard", "Home")" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-bug"></i>
                    </div>
                    <h5>Hatalı Parça Analizi</h5>
                    <p>Hata nedenleri, bölümler ve operatör trendleri.</p>
                </div>
            </a>
        </div>
    </div>
</div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="gunluk-veriler-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = ViewBag.OzetResolvedYear }))
    </script>
    <script src="~/js/pages/dashboards/gunluk-veriler.js" asp-append-version="true"></script>
}
