@model ONERI.Models.HataliParcaDashboardViewModel
@{
    ViewData["Title"] = "Hatalı Parça Analizi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="container">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">Hatalı Parça Analizi</h2>
        </div>
        <div class="col-md-6">
            <form asp-action="HataliParcaDashboard" method="get" class="d-flex justify-content-md-end align-items-center gap-2">
                <div class="form-group">
                    <label for="raporTarihi" class="visually-hidden">Tarih Seç</label>
                    <input type="date" id="raporTarihi" name="raporTarihi" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="ay" class="visually-hidden">Ay Seç</label>
                    <select id="ay" name="ay" class="form-select">
                        <option value="">Ay Seçin</option>
                        <option value="1">Ocak</option>
                        <option value="2">Şubat</option>
                        <option value="3">Mart</option>
                        <option value="4">Nisan</option>
                        <option value="5">Mayıs</option>
                        <option value="6">Haziran</option>
                        <option value="7">Temmuz</option>
                        <option value="8">Ağustos</option>
                        <option value="9">Eylül</option>
                        <option value="10">Ekim</option>
                        <option value="11">Kasım</option>
                        <option value="12">Aralık</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="yil" class="visually-hidden">Yıl Seç</label>
                    <input type="number" id="yil" name="yil" class="form-control" placeholder="Yıl" value="@DateTime.Now.Year" />
                </div>
                <button type="submit" class="btn btn-success">Filtrele</button>
                <button type="button" id="clearFilter" class="btn btn-secondary">Temizle</button>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-x-circle me-2"></i>Toplam Hatalı Adet (Makine Hatası Hariç)</h5>
                    <p class="card-text">@Model.ToplamHataAdet.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-exclamation-triangle me-2"></i>En Çok Hata Nedeni</h5>
                    <p class="card-text">@Model.EnCokHataNedeni</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-diagram-3 me-2"></i>En Çok Hata Bölümü</h5>
                    <p class="card-text">@Model.EnCokHataBolum</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-badge me-2"></i>En Çok Hata Operatörü</h5>
                    <p class="card-text">@Model.EnCokOperator</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.HataliTrendTitle ?? "Hatalı Parça Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="hataAdetTrend"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">Hata Nedenleri</div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="hataNedenGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">Bölüme Göre Hata</div>
                <div class="card-body">
                    <canvas id="bolumGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">Operatöre Göre Hata (Top 10)</div>
                <div class="card-body">
                    <canvas id="operatorGrafigi"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="hatali-parca-dashboard-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = ViewBag.HataliResolvedYear }))
    </script>
    <script src="~/js/pages/dashboards/hatali-parca-dashboard.js" asp-append-version="true"></script>
}
