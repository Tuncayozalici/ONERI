@model ONERI.Models.DashboardViewModel
@{
    ViewData["Title"] = "Boyahane Verileri";
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
}

<div class="container">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">Yeni Boyahane Raporu</h2>
        </div>
        <div class="col-md-6">
            <form asp-action="NewDashboard" method="get" class="d-flex justify-content-md-end align-items-center gap-2">
                <div class="form-group">
                    <label for="raporTarihi" class="visually-hidden">Tarih Seç</label>
                    <input type="date" id="raporTarihi" name="raporTarihi" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Filtrele</button>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Günlük Toplam Boyama</h5>
                    <p class="card-text">@Model.GunlukToplamBoyama.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Panel Toplam Boyama</h5>
                    <p class="card-text">@Model.PanelToplamBoyama.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Döşeme Toplam Boyama</h5>
                    <p class="card-text">@Model.DosemeToplamBoyama.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-x-circle me-2"></i>Günlük Hata Sayısı</h5>
                    <p class="card-text">@Model.GunlukHataSayisi.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-12">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-trash me-2"></i>Fire/Hata Oranı</h5>
                    <p class="card-text">@Model.FireHataOrani.ToString("F2") %</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Üretim Dağılımı (Panel vs Döşeme)
                </div>
                <div class="card-body">
                    <canvas id="uretimDagilimGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Hata Nedenleri Analizi
                </div>
                <div class="card-body">
                    <canvas id="hataGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Kalite Trendi (Son 7 Gün)
                </div>
                <div class="card-body">
                    <canvas id="kaliteTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Üretim Trendi (Son 7 Gün)
                </div>
                <div class="card-body">
                    <canvas id="uretimTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Set the date input to today's date
            const dateInput = document.getElementById('raporTarihi');
            if (dateInput) {
                const urlParams = new URLSearchParams(window.location.search);
                const raporTarihi = urlParams.get('raporTarihi');
                if (raporTarihi) {
                    dateInput.value = raporTarihi;
                } else {
                    const today = new Date();
                    const year = today.getFullYear();
                    const month = String(today.getMonth() + 1).padStart(2, '0');
                    const day = String(today.getDate()).padStart(2, '0');
                    dateInput.value = `${year}-${month}-${day}`;
                }
            }

            // Üretim Dağılımı (Stacked Bar)
            const uretimDagilimCtx = document.getElementById('uretimDagilimGrafigi').getContext('2d');
            new Chart(uretimDagilimCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.UretimDagilimi.Labels)),
                    datasets: [
                        {
                            label: 'Panel',
                            data: @Html.Raw(Json.Serialize(Model.UretimDagilimi.PanelData)),
                            backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        },
                        {
                            label: 'Döşeme',
                            data: @Html.Raw(Json.Serialize(Model.UretimDagilimi.DosemeData)),
                            backgroundColor: 'rgba(255, 159, 64, 0.8)',
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            stacked: true,
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true
                        }
                    }
                }
            });

            // Hata Nedenleri (Doughnut)
            const hataCtx = document.getElementById('hataGrafigi').getContext('2d');
            if (@Model.HataNedenleri.Data.Count > 0) {
                new Chart(hataCtx, {
                    type: 'doughnut',
                    data: {
                        labels: @Html.Raw(Json.Serialize(Model.HataNedenleri.Labels)),
                        datasets: [{
                            label: 'Hatalı Adet',
                            data: @Html.Raw(Json.Serialize(Model.HataNedenleri.Data)),
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.8)',
                                'rgba(54, 162, 235, 0.8)',
                                'rgba(255, 206, 86, 0.8)',
                                'rgba(75, 192, 192, 0.8)',
                                'rgba(153, 102, 255, 0.8)',
                                'rgba(255, 159, 64, 0.8)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            }
                        }
                    }
                });
            }

            // Kalite Trendi (Line)
            const kaliteTrendCtx = document.getElementById('kaliteTrendGrafigi').getContext('2d');
            new Chart(kaliteTrendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.KaliteTrendi.Labels)),
                    datasets: [{
                        label: 'Günlük Hata Sayısı',
                        data: @Html.Raw(Json.Serialize(Model.KaliteTrendi.Data)),
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Üretim Trendi (Line)
            const uretimTrendCtx = document.getElementById('uretimTrendGrafigi').getContext('2d');
            new Chart(uretimTrendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.UretimTrendi.Labels)),
                    datasets: [{
                        label: 'Günlük Üretim Sayısı',
                        data: @Html.Raw(Json.Serialize(Model.UretimTrendi.Data)),
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}
