@model ONERI.Models.GunlukVerilerViewModel
@{
    ViewData["Title"] = "Profil Lazer Verileri";
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="container">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">Profil Lazer Üretim Raporu</h2>
        </div>
        <div class="col-md-6">
            <form asp-action="ProfilLazerVerileri" method="get" class="d-flex justify-content-md-end align-items-center gap-2 js-unified-date-filter-form">
                @await Html.PartialAsync("_UnifiedDateFilter")
                <button type="submit" class="btn btn-primary js-unified-filter-apply" disabled>Filtrele</button>
                <button type="button" class="btn btn-secondary js-unified-filter-clear" disabled>Temizle</button>
            </form>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-12 text-center">
            @await Html.PartialAsync("_SelectedFilterPeriod", Model.RaporTarihi)
        </div>
    </div>

    <!-- KPI Kartları -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 g-4 mb-5">
        <div class="col">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Toplam Üretim</h5>
                    <p class="card-text">@Model.GunlukToplamUretim.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clock me-2"></i>Toplam Süre</h5>
                    <p class="card-text">@Model.GunlukToplamSure.ToString("N0") dk</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-speedometer2 me-2"></i>Ortalama Süre</h5>
                    <p class="card-text">@Model.OrtalamaIslemSuresi.ToString("F2") dk/adet</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-exclamation-triangle me-2"></i>Hatalı Ürün</h5>
                    <p class="card-text">@Model.HataliUrunAdedi.ToString("N0") adet</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-trash3 me-2"></i>Hurda</h5>
                    <p class="card-text">@Model.HurdaAdedi.ToString("N0") adet</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafikler -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Profil Tipine Göre Bugünün Üretim Dağılımı
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="pastaGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.TrendTitle ?? "Son 7 Günlük Üretim Trendi")
                </div>
                <div class="card-body">
                    <canvas id="cizgiGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Hatalı Ürün Trendi
                </div>
                <div class="card-body">
                    <canvas id="hataliTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Profil Tipine Göre Süre Dağılımı
                </div>
                <div class="card-body">
                    <canvas id="urunSureGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Hata Nedenleri
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="hataNedenGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Hatalı Ürün Ne Olacak?
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="hataUrunSonucGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="profil-lazer-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = (int?)null }))
    </script>
    <script src="~/js/pages/dashboards/profil-lazer.js" asp-append-version="true"></script>
}
