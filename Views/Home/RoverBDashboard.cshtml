@model ONERI.Models.RoverBDashboardViewModel
@{
    ViewData["Title"] = "Rover-B Verileri";

    var queryStartDate = Context.Request.Query["startDate"].ToString();
    var queryEndDate = Context.Request.Query["endDate"].ToString();
    var queryRaporTarihi = Context.Request.Query["raporTarihi"].ToString();
    var queryBaslangicTarihi = Context.Request.Query["baslangicTarihi"].ToString();
    var queryBitisTarihi = Context.Request.Query["bitisTarihi"].ToString();

    var routeStartDate = !string.IsNullOrWhiteSpace(queryStartDate)
        ? queryStartDate
        : (!string.IsNullOrWhiteSpace(queryBaslangicTarihi) ? queryBaslangicTarihi : queryRaporTarihi);
    var routeEndDate = !string.IsNullOrWhiteSpace(queryEndDate)
        ? queryEndDate
        : (!string.IsNullOrWhiteSpace(queryBitisTarihi) ? queryBitisTarihi : queryRaporTarihi);

    var baseRouteValues = new
    {
        startDate = string.IsNullOrWhiteSpace(routeStartDate) ? null : routeStartDate,
        endDate = string.IsNullOrWhiteSpace(routeEndDate) ? null : routeEndDate
    };

    var cncOverviewUrl = Url.Action("CncDashboard", "Home", baseRouteValues);
    var masterwoodUrl = Url.Action("MasterwoodDashboard", "Home", baseRouteValues);
    var skipperUrl = Url.Action("SkipperDashboard", "Home", baseRouteValues);
    var roverBUrl = Url.Action("RoverBDashboard", "Home", baseRouteValues);
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
    <link rel="stylesheet" href="~/css/pages/home-gunluk-veriler.css" asp-append-version="true" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="daily-page">
<div class="container">
    <div class="daily-hero">
        <div class="hero-kicker"><i class="bi bi-hdd-rack"></i> CNC Makinesi</div>
        <h2>ROVER-B Üretim Raporu</h2>
        <p class="text-muted mb-0">Rover-B makinesinin üretim, duraklama ve OEE performansını tek ekranda izleyin.</p>
        <a class="btn btn-outline-primary mt-2" href="@cncOverviewUrl">
            <i class="bi bi-arrow-left"></i> Tüm Makineleri Göster
        </a>
    </div>

    <div class="row mb-4 align-items-center">
        <div class="col-md-6"></div>
        <div class="col-md-6">
            <form asp-action="RoverBDashboard" method="get" class="d-flex justify-content-md-end align-items-center gap-2 js-unified-date-filter-form">
                @await Html.PartialAsync("_UnifiedDateFilter")
                <button type="submit" class="btn btn-success js-unified-filter-apply" disabled>Filtrele</button>
                <button type="button" class="btn btn-secondary js-unified-filter-clear" disabled>Temizle</button>
            </form>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-12 text-center">
            @await Html.PartialAsync("_SelectedFilterPeriod", Model.RaporTarihi)
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-graph-up-arrow me-2"></i>Delik + Freeze</h5>
                    <p class="card-text">@Model.ToplamDelikFreeze.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-diagram-3 me-2"></i>Delik + Freeze + PVC</h5>
                    <p class="card-text">@Model.ToplamDelikFreezePvc.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-stopwatch me-2"></i>Toplam Duraklama (dk)</h5>
                    <p class="card-text">@Model.ToplamDuraklamaDakika.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-activity me-2"></i>Performans</h5>
                    <p class="card-text">@Model.OrtalamaPerformans.ToString("N2")%</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-speedometer2 me-2"></i>Kullanılabilirlik</h5>
                    <p class="card-text">@Model.OrtalamaKullanilabilirlik.ToString("N2")%</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-shield-check me-2"></i>Kalite</h5>
                    <p class="card-text">@Model.OrtalamaKalite.ToString("N2")%</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-graph-up me-2"></i>OEE</h5>
                    <p class="card-text">@Model.OrtalamaOee.ToString("N2")%</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-exclamation-octagon me-2"></i>Hatalı Parça</h5>
                    <p class="card-text">@Model.ToplamHataliParca.ToString("N0")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.RoverBOeeTitle ?? "OEE Skoru Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="oeeTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.RoverBTrendTitle ?? "Üretim Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="uretimTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.RoverBHataliTrendTitle ?? "Hatalı Parça Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="hataliTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Performans / Kayıp Süre Trendleri
                </div>
                <div class="card-body">
                    <canvas id="oranTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Duraklama Nedenleri
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="duraklamaNedenGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 mt-2">
        <div class="col">
            <a href="@masterwoodUrl" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-tree"></i>
                    </div>
                    <h5>Masterwood Makinesi</h5>
                    <p>Masterwood raporuna geç.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="@skipperUrl" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-cpu"></i>
                    </div>
                    <h5>Skipper Makinesi</h5>
                    <p>Skipper raporuna geç.</p>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="@roverBUrl" class="nav-tile">
                <div class="status-dot active"></div>
                <div class="text-center">
                    <div class="icon">
                        <i class="bi bi-hdd-rack"></i>
                    </div>
                    <h5>Rover-B Makinesi</h5>
                    <p>Bu makineyi görüntülüyorsunuz.</p>
                </div>
            </a>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="roverb-dashboard-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = (int?)null }))
    </script>
    <script src="~/js/pages/dashboards/roverb-dashboard.js" asp-append-version="true"></script>
}
