@model ONERI.Models.TezgahDashboardViewModel
@{
    ViewData["Title"] = "Tezgah Verileri";
}

@section Styles {
    <link rel="stylesheet" href="~/css/boyahane.css" />
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="container">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">Tezgah Üretim Raporu</h2>
        </div>
        <div class="col-md-6">
            <form asp-action="TezgahDashboard" method="get" class="d-flex justify-content-md-end align-items-center gap-2">
                <div class="form-group">
                    <label for="raporTarihi" class="visually-hidden">Tarih Seç</label>
                    <input type="date" id="raporTarihi" name="raporTarihi" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="ay" class="visually-hidden">Ay Seç</label>
                    <select id="ay" name="ay" class="form-select">
                        <option value="">Ay Seçin</option>
                        <option value="1">Ocak</option>
                        <option value="2">Şubat</option>
                        <option value="3">Mart</option>
                        <option value="4">Nisan</option>
                        <option value="5">Mayıs</option>
                        <option value="6">Haziran</option>
                        <option value="7">Temmuz</option>
                        <option value="8">Ağustos</option>
                        <option value="9">Eylül</option>
                        <option value="10">Ekim</option>
                        <option value="11">Kasım</option>
                        <option value="12">Aralık</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="yil" class="visually-hidden">Yıl Seç</label>
                    <input type="number" id="yil" name="yil" class="form-control" placeholder="Yıl" value="@DateTime.Now.Year" />
                </div>
                <button type="submit" class="btn btn-success">Filtrele</button>
                <button type="button" id="clearFilter" class="btn btn-secondary">Temizle</button>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam me-2"></i>Toplam Parça</h5>
                    <p class="card-text">@Model.ToplamParcaAdeti.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people me-2"></i>Ortalama Kişi Sayısı</h5>
                    <p class="card-text">@Model.OrtalamaKisiSayisi.ToString("N1")</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clock-history me-2"></i>Toplam Kayıp Süre (dk)</h5>
                    <p class="card-text">@Model.ToplamKayipSureDakika.ToString("N0")</p>
                </div>
            </div>
        </div>
        <div class="col-lg col-md-6">
            <div class="kpi-card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-speedometer2 me-2"></i>Ortalama Kullanılabilirlik</h5>
                    <p class="card-text">@Model.OrtalamaKullanilabilirlik.ToString("F2") %</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.TezgahTrendTitle ?? "Üretim Trendi (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="parcaTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.TezgahKisiTrendTitle ?? "Kişi Sayısı (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="kisiTrendGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    @(ViewBag.TezgahKullanilabilirlikTitle ?? "Kullanılabilirlik (Son 7 Gün)")
                </div>
                <div class="card-body">
                    <canvas id="kullanilabilirlikGrafigi"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Kayıp Süre Nedenleri
                </div>
                <div class="card-body">
                    <div class="chart-pie-wrap">
                        <canvas id="kayipNedenGrafigi" class="chart-pie"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script id="tezgah-dashboard-data" type="application/json">
        @Html.Raw(Json.Serialize(new { model = Model, defaultYear = DateTime.Now.Year, resolvedYear = ViewBag.TezgahResolvedYear }))
    </script>
    <script src="~/js/pages/dashboards/tezgah-dashboard.js" asp-append-version="true"></script>
}
