@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; /* Bu sayfa tam ekran olsun, üst menü çıkmasın */
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - Marwood Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <style>
        /* Genel Sayfa Ayarları */
        body { font-family: 'Outfit', sans-serif; overflow: hidden; height: 100vh; }
        
        /* SOL TARAF: FOTOĞRAF ALANI */
        .login-image-side {
            /* BURASI ÖNEMLİ: Sizin wwwroot/img klasörüne koyduğunuz fotoğrafı çeker */
            background-image: url('/img/login.jpg'); 
            background-size: cover;       /* Resmi ekrana sığdır */
            background-position: center;  /* Resmi ortala */
            height: 100%;
            position: relative;
        }
        
        /* Resmin üzerindeki siyah perde (yazılar okunsun diye) */
        .overlay {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)); 
        }

        /* SAĞ TARAF: FORM ALANI */
        .login-form-side {
            height: 100%;
            background-color: #fff;
            display: flex;
            align-items: center;    /* Dikeyde ortala */
            justify-content: center; /* Yatayda ortala */
        }

        .form-wrapper { width: 100%; max-width: 400px; padding: 20px; }

        /* Buton ve Input Tasarımları */
        .btn-marwood {
            background-color: #212529; color: white; padding: 12px; border-radius: 8px; border: none;
        }
        .btn-marwood:hover { background-color: #000; transform: translateY(-2px); }

        .form-control {
            padding: 12px; border-radius: 8px; background-color: #f8f9fa; border: 1px solid #eee;
        }
    </style>
</head>
<body>

    <div class="container-fluid p-0 h-100">
        <div class="row g-0 h-100">
            
            <div class="col-lg-7 d-none d-lg-block login-image-side">
                <div class="overlay"></div>
                <div class="position-absolute bottom-0 start-0 p-5 text-white" style="z-index: 2;">
                    <h1 class="display-4 fw-bold">Better office mood.</h1>
                    <p class="lead text-white-50 mt-3" style="max-width: 500px;">
                        Çalışma alanlarını dönüştüren tasarımlar için fikirlerinizi bekliyoruz.
                    </p>
                    <div class="mt-4 pt-4 border-top border-white border-opacity-25">
                        <small class="text-white-50">© 2026 Marwood Design</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-5 login-form-side">
                <div class="form-wrapper">
                    
                    <div class="mb-5">
                        <h4 class="fw-bold text-dark mb-0 fs-3">Marwood<span class="fw-light text-secondary">Portal</span></h4>
                        <p class="text-muted mt-2">Yönetim paneli girişi.</p>
                    </div>

                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger border-0 bg-danger bg-opacity-10 text-danger rounded-3">
                            <i class="bi bi-exclamation-circle-fill me-2"></i> @ViewBag.Hata
                        </div>
                    }

                    <form action="/Login" method="post">
                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">KULLANICI ADI</label>
                            <input type="text" name="KullaniciAdi" class="form-control" placeholder="Örn: admin" required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">ŞİFRE</label>
                            <input type="password" name="Sifre" class="form-control" placeholder="••••••••" required>
                        </div>

                        <button type="submit" class="btn btn-marwood w-100 fw-bold">
                            Giriş Yap
                        </button>
                    </form>
                    
                    <div class="mt-4 text-center">
                        <a href="/" class="text-decoration-none text-muted small">← Ana Sayfaya Dön</a>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>