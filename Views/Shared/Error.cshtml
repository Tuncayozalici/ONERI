@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center p-5" style="border-radius: 20px; border: none; box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, .075); background-color: white;">
                
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                </div>

                <h1 class="fw-bold text-danger">Bir Hata Oluştu</h1>
                <p class="lead text-muted">İsteğiniz işlenirken beklenmedik bir sorunla karşılaşıldı.</p>
                <p>Lütfen daha sonra tekrar deneyin veya sorun devam ederse yöneticinize bildirin.</p>

                @if (Model.ShowRequestId)
                {
                    <div class="mt-4 p-3 rounded" style="background-color: #f8f9fa; text-align: left;">
                        <p class="small text-muted mb-1">Teknik Detaylar:</p>
                        <code class="d-block"><strong>Request ID:</strong> @Model.RequestId</code>
                        <p class="small mt-2">Bu bilgi, hatanın kaynağını bulmak için geliştirici tarafından kullanılabilir.</p>
                    </div>
                }

                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-dark btn-lg px-4">Ana Sayfaya Dön</a>
                </div>

            </div>
        </div>
    </div>
</div>