<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ONERI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ONERI.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Poppins:wght@300;400;500;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        .offcanvas-body .nav-link {
            transition: background-color 0.2s ease-in-out;
        }
        .offcanvas-body .nav-link:hover {
            background-color: #f8f9fa;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <div class="d-flex align-items-center">
                    <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#yanMenu" aria-controls="yanMenu">
                        <i class="bi bi-list fs-4 text-dark"></i>
                    </button>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="fw-bold text-dark">Marwood</span><span class="fw-light text-secondary">Portal</span>
                    </a>
                </div>
                
                <div class="d-flex align-items-center">
                    <ul class="navbar-nav flex-row align-items-center">
                        <li class="nav-item d-none d-sm-block">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-3">
                                <span class="navbar-text">Hoş geldin, @(User.FindFirst("AdSoyad")?.Value ?? User.Identity?.Name ?? "Kullanıcı")</span>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="btn btn-outline-danger btn-sm" asp-area="" asp-controller="Login" asp-action="Logout">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-3">
                                <a class="btn btn-dark btn-sm" asp-area="" asp-controller="Login" asp-action="Index">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Yan Menü (Offcanvas) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="yanMenu" aria-labelledby="yanMenuLabel">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="yanMenuLabel">Menü</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <p class="text-muted small">MODÜLLER</p>
        <div class="list-group list-group-flush">
            <a asp-controller="Home" asp-action="ProfilLazerVerileri" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-speedometer2 fs-5 me-2"></i> Profil Lazer
                </span>
            </a>
            <a asp-controller="Home" asp-action="BoyahaneDashboard" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-paint-bucket fs-5 me-2"></i> Boyahane Dashboard
                </span>
            </a>
            @if(User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span>
                        <i class="bi bi-shield-lock fs-5 me-2"></i> Yönetim Paneli
                    </span>
                </a>
            }
            <a asp-controller="FikirAtolyesi" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-lightbulb fs-5 me-2"></i> Fikir Atölyesi
                </span>
            </a>
            <a asp-controller="Oneri" asp-action="Yeni" class="list-group-item list-group-item-action d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i> Yeni Öneri
            </a>
            <a asp-controller="Oneri" asp-action="Sorgula" class="list-group-item list-group-item-action d-flex align-items-center gap-2">
                <i class="bi bi-search"></i> Öneri Sorgula
            </a>
        </div>
      </div>
    </div>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ONERI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
