@{
    string ToIso(string key)
    {
        var raw = Context.Request.Query[key].ToString();
        if (string.IsNullOrWhiteSpace(raw))
        {
            return string.Empty;
        }

        if (DateTime.TryParse(raw, out var parsed))
        {
            return parsed.ToString("yyyy-MM-dd");
        }

        return string.Empty;
    }

    var startDate = ToIso("startDate");
    var endDate = ToIso("endDate");

    if (string.IsNullOrWhiteSpace(startDate) && string.IsNullOrWhiteSpace(endDate))
    {
        var legacyStart = ToIso("baslangicTarihi");
        var legacyEnd = ToIso("bitisTarihi");
        var legacySingle = ToIso("raporTarihi");

        startDate = !string.IsNullOrWhiteSpace(legacyStart) ? legacyStart : legacySingle;
        endDate = !string.IsNullOrWhiteSpace(legacyEnd) ? legacyEnd : legacySingle;
    }
}

<div class="unified-date-filter js-unified-date-filter">
    <button type="button" class="btn btn-outline-secondary unified-date-filter__trigger js-udf-trigger">
        <i class="bi bi-calendar3 me-2"></i>
        <span class="js-udf-display">Tarih Seç</span>
        <i class="bi bi-chevron-down ms-2"></i>
    </button>

    <div class="card shadow unified-date-filter__popover js-udf-popover d-none">
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label mb-1">Seçim Türü</label>
                <select class="form-select js-udf-mode">
                    <option value="single_day">Tek Gün</option>
                    <option value="date_range">Tarih Aralığı</option>
                    <option value="month">Ay Seç</option>
                </select>
            </div>

            <div class="js-udf-panel js-udf-panel-single">
                <label class="form-label mb-1">Gün Seç</label>
                <input type="date" class="form-control js-udf-single" inputmode="numeric" min="2000-01-01" max="2099-12-31" />
            </div>

            <div class="js-udf-panel js-udf-panel-range d-none">
                <label class="form-label mb-1">Başlangıç Tarihi</label>
                <input type="date" class="form-control js-udf-range-start mb-2" inputmode="numeric" min="2000-01-01" max="2099-12-31" />
                <label class="form-label mb-1">Bitiş Tarihi</label>
                <input type="date" class="form-control js-udf-range-end" inputmode="numeric" min="2000-01-01" max="2099-12-31" />
            </div>

            <div class="js-udf-panel js-udf-panel-month d-none">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary js-udf-prev-year">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                    <div class="fw-semibold js-udf-month-year"></div>
                    <button type="button" class="btn btn-sm btn-outline-secondary js-udf-next-year">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
                <div class="unified-date-filter__month-grid js-udf-month-grid"></div>
            </div>
        </div>
    </div>

    <input type="hidden" name="startDate" class="js-udf-start" value="@startDate" />
    <input type="hidden" name="endDate" class="js-udf-end" value="@endDate" />
</div>
