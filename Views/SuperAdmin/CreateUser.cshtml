@model ONERI.Models.CreateUserViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between gap-2 mb-4">
        <div>
            <h1 class="h4 mb-1">Yeni Kullanıcı</h1>
            <p class="text-muted mb-0">Kullanıcıyı burada oluşturun ve rol atayın.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Index">Geri Dön</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateUser" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label">E-posta</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-4">
                        <label asp-for="Password" class="form-label">Geçici Şifre</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <h2 class="h6">Roller</h2>
                    <p class="text-muted small">Rol seçilmezse varsayılan olarak Personel atanır.</p>
                    <div class="d-flex flex-column gap-2">
                        @for (var i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="Roles[i].RoleName" />
                                <input class="form-check-input" asp-for="Roles[i].Selected" />
                                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a class="btn btn-outline-secondary" asp-action="Index">İptal</a>
                    <button type="submit" class="btn btn-dark">Kullanıcı Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>
