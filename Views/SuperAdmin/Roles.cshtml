@model List<ONERI.Models.RoleListItemViewModel>
@{
    ViewData["Title"] = "Rol Yetkileri";
}

<div class="container py-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-4">
        <div>
            <h1 class="h4 mb-1">Rol Yetkileri</h1>
            <p class="text-muted mb-0">Rol bazlı izinleri düzenleyin.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-action="Index">Kullanıcı Listesi</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="CreateRole" method="post" class="row g-2 align-items-end">
                @Html.AntiForgeryToken()
                <div class="col-md-6">
                    <label class="form-label">Yeni Rol</label>
                    <input class="form-control" name="roleName" placeholder="Örn: Dashboard_Only" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-dark w-100">Rol Oluştur</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Rol</th>
                            <th>Yetki Sayısı</th>
                            <th class="text-end">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>@role.PermissionCount</td>
                                <td class="text-end">
                                    @if (role.IsSuperAdmin)
                                    {
                                        <span class="text-muted">Düzenlenemez</span>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-dark" asp-action="EditRole" asp-route-id="@role.Id">Düzenle</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
